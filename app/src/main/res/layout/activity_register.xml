<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_account_title"
        android:gravity="center|bottom">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="@drawable/bg_account"
        android:gravity="center|top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_input"
                android:gravity="left|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_register_phone" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="@string/hint_register_phone"
                    android:paddingRight="10dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_get_verify_code"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn"
                android:text="@string/btn_get_captcha"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_register_captcha" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_captcha"
                style="@style/account_edit_text"
                android:hint="@string/hint_captcha" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_register_password" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_password"
                style="@style/account_edit_text"
                android:hint="@string/hint_input_password"
                android:inputType="textPassword" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_register_password" />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_repeat_password"
                style="@style/account_edit_text"
                android:hint="@string/hint_repeat_password"
                android:inputType="textPassword" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_account_btn"
            android:text="@string/btn_next"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_return"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_account_btn"
            android:text="@string/btn_return_login"
            android:textColor="@color/text_white"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>